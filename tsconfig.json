{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2015", "es2018", "esnext.asynciterable", "dom"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "db-migrate": ["src/types/db-migrate"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"]
}
